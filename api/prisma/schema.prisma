datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                     String        @id @default(uuid())
  name                   String
  email                  String        @unique
  password_hash          String
  is_admin               Boolean       @default(false)
  school_class_id        String?
  school_class           SchoolClass?  @relation("students", fields: [school_class_id], references: [id])
  created_at             DateTime      @default(now())
  updated_at             DateTime      @updatedAt
  deleted_school_classes SchoolClass[]

  @@map("users")
}

model SchoolClass {
  id            String              @id @unique @default(uuid())
  name          String              @unique
  students      User[]              @relation("students")
  lessons       SchoolClassLesson[] @relation("school_class_lessons")
  homeworks     Homework[]          @relation("school_class_homework")
  created_at    DateTime            @default(now())
  updated_at    DateTime            @updatedAt
  deleted_at    DateTime?
  deleted_by_id String?
  deleted_by    User?               @relation(fields: [deleted_by_id], references: [id])

  @@map("school_classes")
}

model Lesson {
  id           String              @id @unique @default(uuid())
  title        String
  description  String
  text_content String?
  video_url    String
  used_on      SchoolClassLesson[] @relation("lesson")

  @@map("lessons")
}

model SchoolClassLesson {
  id              String      @id @unique @default(uuid())
  lesson_id       String
  lesson          Lesson      @relation("lesson", fields: [lesson_id], references: [id])
  school_class_id String
  school_class    SchoolClass @relation("school_class_lessons", fields: [school_class_id], references: [id])
  public_at       DateTime

  @@map("class_lessons")
}

model Homework {
  id              String      @id @unique @default(uuid())
  title           String
  school_class_id String
  school_class    SchoolClass @relation("school_class_homework", fields: [school_class_id], references: [id])
  questions       Question[]  @relation("homework_question")
  public_at       DateTime
  deadline        DateTime?

  @@map("homeworks")
}

model Question {
  id          String         @id @unique @default(uuid())
  points      Int
  description String
  type        String
  homework_id String
  homework    Homework       @relation("homework_question", fields: [homework_id], references: [id])
  answers     AnswerOption[] @relation("answer_question")

  @@map("questions")
}

model AnswerOption {
  id          String   @id @unique @default(uuid())
  text        String
  selected    Boolean
  question_id String
  question    Question @relation("answer_question", fields: [question_id], references: [id])

  @@map("answer_options")
}
